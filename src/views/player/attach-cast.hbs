
            <section id="attachCast">
                <div class="attachCastSection">
                <h1>Attach New Team</h1>
                <div class="attach-form">
                    <h2>{{player.name}}</h2>
                    <img class="movie" src="{{player.imageUrl}}">
                    <form method="POST">
                        <label for="cast">Team</label>
                        <select id="cast" name="cast">
                        <option value="none" selected>--------</option>
                        {{#each casts}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                        </select>
                        <div id="center-btn">
                            <button id="create-btn">Add Team</button>
                        </div>
                    </form>
                </div>
            </div>
            </section>